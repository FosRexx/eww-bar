; ━━━━ i3_bars ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━╸
(defwidget i3_bar []
  (box :orientation "horizontal"
       :space-evenly true ; To align latter boxes to the sides
    (box :halign "start"
         :space-evenly false
         :spacing 15
      (i3_workspaces)
      (i3_wm_mode)
    )
    (box :halign "end"
         :space-evenly false
         :spacing 5
      (ip_address)
      (line_seperator)
      (wifi_strength)
      (line_seperator)
      (network_speed)
      (line_seperator)
      (cpu)
      (line_seperator)
      (ram)
      (line_seperator)
      (battery)
      (line_seperator)
      (datetime)
      (tray)
    )
  )
)
